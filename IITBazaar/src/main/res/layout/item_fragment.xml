<?xml version="1.0" encoding="utf-8"?>
<!-- This fragment describes a single item -->
<!-- This is an item in the sell listing -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_width="100dp"
        android:orientation="horizontal"
        android:id="@+id/photo_layout"
        android:gravity="left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">



        <ImageView
            android:id="@+id/photo"
            android:layout_height="fill_parent"
            android:layout_width="0dp"

            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/no_picture"
            android:layout_weight="1"
            android:contentDescription="itemImage" />







    </LinearLayout>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/notPic"

        android:layout_toRightOf="@id/photo_layout"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:gravity="bottom" >





        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/text"
            android:gravity="top">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/upper"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:gravity="center|top">

            <TextView android:id="@+id/name"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Name"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                />

            <TextView android:id="@+id/price"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="Price"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />
        </LinearLayout>




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/lower"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:gravity="center|bottom">


            <TextView android:id="@+id/itemDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Description"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"

                />

            <TextView android:id="@+id/endtime"
                android:textSize="14sp"
                android:text="EndTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"/>



        </LinearLayout>


    </LinearLayout>


        <ImageView
            android:id="@+id/arrow"
            android:layout_height="@dimen/fab_margin"
            android:layout_width="30dp"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:src="@drawable/right_arrow"
            android:layout_gravity="right"
            android:contentDescription="rightArrow" />



    </LinearLayout>



</RelativeLayout>