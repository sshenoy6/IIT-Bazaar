<!-- This lays out the sell subfragment-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <!-- The buy menu, normally set to default -->
    <fragment android:name="edu.iit.cs442.team7.iitbazaar.fragments.SellMenuFragment"
        android:id="@+id/buy_menu_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/sellmenufragment"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iit_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:colorBackground"
        android:paddingBottom="10dp"/>


    <!--buy list goes here programatically-->
    <FrameLayout
        android:id="@+id/sell_content_fragment"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0px" />

</LinearLayout>


