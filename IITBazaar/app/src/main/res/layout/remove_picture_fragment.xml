<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fragment android:name="edu.iit.cs442.team7.iitbazaar.fragments.RemovePictureFragment"
        android:id="@+id/removable_picture_list"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        tools:layout="@layout/remove_picture_list"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignStart="@+id/remove_picture_button"
        />
    <fragment android:name="edu.iit.cs442.team7.iitbazaar.fragments.RemovePictureButtonFragment"
        android:id="@+id/remove_picture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/remove_picture_button_fragment"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>